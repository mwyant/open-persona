# Environment variables for open-persona
# Edit and copy to .env or .env.launcher as needed

# Local bind mount locations (relative to repository root)
DATA_OPENWEBUI=./data/open-webui
DATA_OPENCODE=./data/opencode
WORKSPACES_DIR=./workspaces

# Open Persona provider defaults (placeholders)
OPEN_PERSONA_DEFAULT_OPENAI_API_KEY=
OPEN_PERSONA_DEFAULT_ANTHROPIC_API_KEY=
OPEN_PERSONA_DEFAULT_OPENROUTER_API_KEY=

# Default models (can be overridden):
# Main agent model used when none specified per-workspace
DEFAULT_MAIN_MODEL=gpt-5-mini
# Small model for subagent tasks (default small model)
DEFAULT_SUBAGENT_MODEL=lmstudio-local/glm-4.6v-flash
# Optional template workspace hash to source model defaults from
TEMPLATE_WORKSPACE_HASH=cb61ed2a6a9882ff

# Web UI secret key (auto-generated if missing)
# WEBUI_SECRET_KEY=...
